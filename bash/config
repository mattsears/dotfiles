TERM=xterm-256color

# Get the current branch
parse_git_branch() {
  git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/[\1]/'
}

# Customize the prompt with an effen lightning bolt
export PS1="\[$NO_COLOR\]\n\u\[$BLUE\]:\[$NO_COLOR\]\w\[$GREEN\]\$(parse_git_branch)\[$MAGENTA\]\nâš¡\[$NO_COLOR\] "
